# Leer el contenido del archivo test_xml.txt
with open('test_xml.txt', 'r', encoding='utf-8') as file:
    content = file.read()

# Buscar y extraer los bloques de texto para cada H8CREF_CONCAT
for h8cref_concat in listado_de_ref['H8CREF_CONCAT']:
    pattern = re.compile(rf'<PEPITO:"GRILLO">.*?{h8cref_concat}.*?</Message>', re.DOTALL)
    match = pattern.search(content)
    if match:
        extracted_text = match.group(0)
        # Guardar el texto extraído en un nuevo archivo
        with open(f'{h8cref_concat}.txt', 'w', encoding='utf-8') as output_file:
            output_file.write(extracted_text)

# Mostrar los DataFrames resultantes
print("info_completa_listado_de_ref")
print(info_completa_listado_de_ref)

print("\nlistado_de_ref")
print(listado_de_ref)





!!!!!!!!!!!!!!!!!!!!!
# Buscar y extraer los bloques de texto para cada H8CREF_CONCAT
for h8cref_concat in listado_de_ref['H8CREF_CONCAT']:
    # Buscar la posición del H8CREF_CONCAT
    h8cref_pos = content.find(h8cref_concat)
    
    if h8cref_pos != -1:
        # Buscar el primer <PEPITO:"GRILLO"> anterior a la posición de H8CREF_CONCAT
        pepito_start_pos = content.rfind('<PEPITO:"GRILLO">', 0, h8cref_pos)
        
        if pepito_start_pos != -1:
            # Buscar el primer </Message> después del H8CREF_CONCAT
            message_end_pos = content.find('</Message>', h8cref_pos)
            
            if message_end_pos != -1:
                # Extraer el bloque de texto desde <PEPITO:"GRILLO"> hasta </Message>
                extracted_text = content[pepito_start_pos:message_end_pos + len('</Message>')]
                
                # Guardar el texto extraído en un nuevo archivo
                with open(f'{h8cref_concat}.txt', 'w', encoding='utf-8') as output_file:
                    output_file.write(extracted_text)





# Crear una máscara booleana para filtrar las filas coincidentes
mask = (base_A['TITULO_ESPECIE'] == base_B['H8SCID']) & \
       (base_A['COMITENTE'] == base_B['H8ASOS']) & \
       (base_A['CANTIDAD'] == base_B['H8SQTY']) & \
       (base_A['FECHA'] == base_B['H8ATSD'])

# Aplicar la máscara a los DataFrames originales
coincidencias_A = base_A[mask]
coincidencias_B = base_B[mask]

# Combinar los DataFrames filtrados en uno nuevo
info_completa_listado_de_ref = pd.concat([coincidencias_A, coincidencias_B], axis=1)

# Mostrar el nuevo DataFrame
print(info_completa_listado_de_ref)
